<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %org.tool.kit.logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <property name="env" value="${app.log.env:-debug}" />

    <include resource="logback-${env}.xml" />

</configuration>